{
  "name": "creed",
  "version": "1.0.1",
  "description": "Sophisticated and functionally-minded async with advanced features: coroutines, promises, ES2015 iterables, fantasy-land",
  "main": "dist/creed.js",
  "jsnext:main": "src/main.js",
  "files": [
    "dist/creed.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/briancavalier/creed.git"
  },
  "author": "brian@hovercraftstudios.com",
  "license": "MIT",
  "keywords": [
    "promise",
    "promises",
    "promises/a+",
    "promises-aplus",
    "future",
    "fantasyland",
    "monad",
    "applicative",
    "async"
  ],
  "scripts": {
    "build-dist": "mkdir -p dist && rollup src/main.js | babel -m umd --module-id creed -o dist/creed.js --loose es6.classes",
    "build": "npm run build-dist && uglifyjs -c 'warnings=false' -m -o dist/creed.min.js -- dist/creed.js",
    "preversion": "npm run build",
    "test-aplus": "promises-aplus-tests test/aplus.js --reporter dot",
    "test-main": "nyc ava",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --lines 100 --functions 100",
    "update-coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "jscs -x src && jsinspect src && eslint src",
    "test": "npm run lint && npm run test-main && npm run check-coverage && npm run test-aplus"
  },
  "ava": {
    "files": [
      "test/**/*-test.js"
    ],
    "require": [
      "babel/register"
    ]
  },
  "nyc": {
    "cache": true,
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel/register"
    ]
  },
  "devDependencies": {
    "ava": "^0.11.0",
    "babel": "^5.8.29",
    "babel-eslint": "^4.1.0",
    "coveralls": "^2.11.4",
    "eslint": "^1.10.0",
    "istanbul": "^0.4.0",
    "jscs": "^2.4.0",
    "jsinspect": "^0.7.0",
    "nyc": "^5.6.0",
    "promises-aplus-tests": "^2.1.1",
    "rollup": "^0.25.0",
    "uglify-js": "^2.6.0"
  }
}
